<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/import_menu"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            style="@style/CardTitle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            style="@style/CardParent"
            android:text="@string/new_import_instructions_1"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/card_link_text"
            android:textAlignment="center"
            android:text="@string/new_import_instructions_url"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            style="@style/CardParent"
            android:text="@string/new_import_instructions_2"
            android:layout_gravity="center"
            android:gravity="center_horizontal" android:autoText="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="0000"
            android:layout_margin="10dp"
            android:id="@+id/import_code_1"
            android:layout_gravity="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="0000"
            android:layout_margin="10dp"
            android:id="@+id/import_code_2"
            android:layout_gravity="center"/>


</LinearLayout>