<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ifrins.hipstacast"
    android:versionCode="18"
    android:versionName="1.0.10" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="com.htc.idlescreen.permission.IDLESCREEN_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".Hipstacast"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/AppTheme">
        <uses-library
            android:name="com.htc.lockscreen.fusion"
            android:required="false" />
        <uses-library
            android:name="com.htc.fusion.fx"
            android:required="false" />

        <provider
            android:name="com.ifrins.hipstacast.provider.HipstacastContentProvider"
            android:authorities="com.ifrins.hipstacast.provider.HipstacastContentProvider"
            android:exported="false" />

        <service android:name=".HipstacastPlayerService" >
        </service>
        <service android:name=".HipstacastSyncService" >
        </service>
        <service
            android:name=".HipstacastHTCLockScreenService"
            android:enabled="false"
            android:permission="com.htc.idlescreen.permission.IDLESCREEN_SERVICE" >
            <intent-filter>
                <action android:name="com.htc.lockscreen.idlescreen.IdleScreenService" />
            </intent-filter>

            <meta-data
                android:name="com.htc.lockscreen.idlescreen"
                android:resource="@xml/idlescreen" />
        </service>

        <receiver
            android:name=".DownloadReceiver"
            android:exported="true" >
            <intent-filter android:priority="100" >
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".HipstacastMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HipstacastWelcome"
            android:label="@string/welcome_to_hipstacast"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        <activity
            android:name=".HipstacastEpisodeView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".EpisodePlayer"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".HipstacastSettings"
            android:label="@string/settings" >
        </activity>
        <activity
            android:name=".HipstacastSearchNeue"
            android:label="@string/menu_search" >
        </activity>
        <activity
            android:name=".HipstacastVideoEpisodePlayer"
            android:label="@string/menu_search"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" 
            android:launchMode="singleInstance">
        </activity>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="450aa570a5e6b349ef7a66d64772c93f12031b58"/>
    </application>

</manifest>